{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": false,
    "isolatedModules": true,
    "types": ["@dcloudio/types"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "./src",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "example", "**/*.test.ts"]
}
